@page "/dogs"
@using DogHealthTracker.ViewModels.Dog
@inject NavigationManager Navigation;
@inject DogViewModel dogViewModel;

<h3>Your Dogs</h3>

<table class="table center" >
    <thead>
        <tr>
            <th>Name</th>
            <th>Date of Birth</th>
            <th>View Dog</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dog in dogViewModel.Dogs)
        {
            <tr>
                <td>@dog.Name</td>
                <td>@dog.DateOfBirth</td>
                <td><button @onclick=InspectDog 
                            type="button" 
                            class="btn btn-primary">View Dog</button></td>
            </tr>
        }
    </tbody>
</table>

@code {

    private void InspectDog()
        => Navigation.NavigateTo($"/dogs/dogOverview/{dogViewModel.Dogs.First().DogID}");

}
